extends layout

block content
  h1= title
  - let icecreames=results
  div(class="container-fluid")
  div(class="row m-1")
    each icecream,index in icecreames
      - let destination = `dispatch(\"/icecream/update?id=${icecream._id}\")`
        div(class="col-sm-4  m-1" style=("font-weight:bolder")) #{icecream.Brand} - #{icecream.Flavour} - #{icecream.Cost}
          button.btn( class="btn-primary ml-1", onclick= destination) Update
  script.
      function dispatch(path){
      window.location.href=path
      }
      function buy(itemNo)
      {
        alert(`You purchased Item ${itemNo+1}`)
      }