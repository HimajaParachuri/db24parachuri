extends layout

block content
  h1= title
  - let icecreames=results
  - let destinationcreate = `dispatchCreate(\"/icecream/create\")`
  div(class="container-fluid")
    button.btn( class="btn-secondary ml-1 btn-lg", onclick= destinationcreate) Create
  div(class="row m-1")
    each icecream,index in icecreames
      - let destinationupdate = `dispatch(\"/icecream/update?id=${icecream._id}\")`
      - let destinationdetail =   `dispatch(\"/icecream/detail?id=${icecream._id}\")`
      - let destinationdelete = `dispatchDelete(\"/icecream/delete?id=${icecream._id}\")`
        div(class="col-sm-4  m-1" style=("font-weight:bolder")) #{icecream.Brand} - #{icecream.Flavour} - #{icecream.Cost}
          button.btn( class="btn-primary ml-1", onclick= destinationdetail) Detail
          button.btn( class="btn-info ml-1", onclick= destinationupdate) Update
          button.btn( class="btn-danger ml-1", onclick= destinationdelete) Delete
  script.
      function dispatch(path){
      window.location.href=path
      }
      function buy(itemNo)
      {
        alert(`You purchased Item ${itemNo+1}`)
      }
      function dispatchCreate(path){
        window.location.href=path
      }
      function dispatchDelete(path){
        window.location.href=path
      }